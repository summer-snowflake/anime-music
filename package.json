{
  "name": "anime-music",
  "version": "1.0.0",
  "description": "アニメのOPとEDをまとめた情報サイト（の予定）",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev": "webpack-dev-server --inline --content-base serve/ --history-api-fallback",
    "start:prod": "npm run build && node server.bundle.js",
    "build:client": "webpack",
    "build:server": "webpack --config webpack.server.config.js",
    "build": "npm run build:client && npm run build:server",
    "test": "jest"
  },
  "jest": {
    "automock": true,
    "unmockedModulePathPatterns": [
      "react",
      "enzyme"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(js)$",
    "moduleFileExtensions": [
      "es6",
      "js",
      "jsx"
    ]
  },
  "babel": {
    "presets": [
      "react",
      "es2015"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/summer-snowflake/anime-music.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/summer-snowflake/anime-music/issues"
  },
  "homepage": "https://github.com/summer-snowflake/anime-music#readme",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-jest": "^17.0.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "browserify-incremental": "^3.1.1",
    "compression": "^1.6.2",
    "enzyme": "^2.6.0",
    "eslint": "^3.11.1",
    "eslint-plugin-react": "^6.8.0",
    "express": "^4.14.0",
    "http-server": "^0.9.0",
    "if-env": "^1.0.0",
    "jest": "^17.0.3",
    "jest-cli": "^17.0.3",
    "jquery": "^2.1.3",
    "react": "^15.4.1",
    "react-addons-test-utils": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-router": "^3.0.0",
    "react-test-renderer": "^15.4.1",
    "reactify": "^1.1.1",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "react": "^15.4.1",
    "react-dom": "^15.4.1"
  }
}
