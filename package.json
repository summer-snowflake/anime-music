{
  "name": "anime-music",
  "version": "1.0.0",
  "description": "アニメのOPとEDをまとめた情報サイト（の予定）",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "postinstall": "npm run build",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev": "webpack-dev-server --inline --content-base public/ --history-api-fallback",
    "start:prod": "npm run build && node server.bundle.js",
    "build:client": "webpack",
    "build:server": "webpack --config webpack.server.config.js",
    "build": "npm run build:client && npm run build:server",
    "test": "jest"
  },
  "jest": {
    "automock": true,
    "unmockedModulePathPatterns": [
      "react",
      "enzyme",
      "expect",
      "expect-jsx"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(js)$",
    "moduleFileExtensions": [
      "es6",
      "js",
      "jsx"
    ]
  },
  "babel": {
    "presets": [
      "react",
      "es2015"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/summer-snowflake/anime-music.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/summer-snowflake/anime-music/issues"
  },
  "homepage": "https://github.com/summer-snowflake/anime-music#readme",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-jest": "^18.0.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babelify": "^7.3.0",
    "bootstrap-sass": "^3.3.7",
    "browserify": "^13.3.0",
    "browserify-incremental": "^3.1.1",
    "compression": "^1.6.2",
    "css-loader": "^0.26.1",
    "dotenv": "^2.0.0",
    "enzyme": "^2.7.0",
    "eslint": "^3.12.2",
    "eslint-plugin-react": "^6.8.0",
    "expect": "^1.20.2",
    "expect-jsx": "^3.0.0",
    "express": "^4.14.0",
    "http-server": "^0.9.0",
    "if-env": "^1.0.0",
    "jest": "^18.1.0",
    "jest-cli": "^18.1.0",
    "jest-fetch-mock": "^1.0.6",
    "node-sass": "^4.1.1",
    "react": "^15.4.1",
    "react-addons-test-utils": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-element-to-jsx-string": "^6.0.0",
    "react-router": "^3.0.0",
    "reactify": "^1.1.1",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^2.3.0"
  },
  "dependencies": {
    "babel-loader": "^6.2.10",
    "bootstrap": "^3.3.7",
    "react": "^15.4.1",
    "react-dom": "^15.4.1"
  }
}
